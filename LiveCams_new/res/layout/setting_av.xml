<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	<TextView 
	    android:id="@+id/srvIpTitle"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:textSize="15sp"
	    android:text="录像参数设置"
	    android:textColor="@android:color/black"
	    android:gravity="center_horizontal"
	    />
    <TextView
        android:id="@+id/videoSizeTv"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/videosize"
        android:textColor="@android:color/black" />
    

    <Spinner
        android:id="@+id/videoSizeSp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/videoSizeTv" >
        <requestFocus />
    </Spinner>

    <TextView
        android:id="@+id/vframeRateTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/videoSizeSp"
        android:text="@string/vframerate" 
        android:textColor="@android:color/black"/>
   <Spinner
        android:id="@+id/videofps"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/vframeRateTv" >
        <requestFocus />
    </Spinner>

    <TextView
        android:id="@+id/vbitRateTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/videofps"
        android:text="@string/vbitrate" 
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/vbitRateEt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/vbitRateTv"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/rsvdTv"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/vbitRateEt"
        android:text="" 
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/confirmBt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rsvdTv"
        android:text="@string/confirm3" />

  
    <Button
        android:id="@+id/cancelBt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
          android:layout_toRightOf="@id/confirmBt"
          android:layout_alignParentRight="true"
        android:layout_below="@+id/rsvdTv"
                android:text="@string/cancel" />

</RelativeLayout>