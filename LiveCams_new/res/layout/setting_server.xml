<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	<TextView 
	    android:id="@+id/srvIpTitle"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:textSize="15sp"
	    android:textColor="@android:color/black"
	    android:text="IP端口设置"
	    android:gravity="center_horizontal"
	    />
    <TextView
        android:id="@+id/srvIpaddrTv"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
           android:textColor="@android:color/black"
        android:text="@string/srvipaddr" >
        <requestFocus />
	</TextView>

    <EditText
        android:id="@+id/srvIpaddrEt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/srvIpaddrTv"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textUri" />

    <TextView
        android:id="@+id/srvPortTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_below="@+id/srvIpaddrEt"
        android:layout_centerHorizontal="true"
           android:textColor="@android:color/black"
        android:text="@string/srvport" />

    <EditText
        android:id="@+id/srvPortEt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"               
        android:layout_below="@+id/srvPortTv"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="number" />
    
    <TextView
        android:id="@+id/rsvdTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"            
        android:layout_below="@+id/srvPortEt"
        android:layout_centerHorizontal="true"
           android:textColor="@android:color/black"
        android:text="" />
    
  <Button
        android:id="@+id/confirmBt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rsvdTv"
        android:text="@string/confirm3" />
 <Button
        android:id="@+id/cancelBt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
      
        android:layout_toRightOf="@id/confirmBt"
          android:layout_alignParentRight="true"
        android:layout_below="@+id/rsvdTv"
        
        android:text="@string/cancel" />
   
    
   
    
</RelativeLayout>