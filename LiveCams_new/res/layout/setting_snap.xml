<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	<TextView 
	    android:id="@+id/srvIpTitle"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:textSize="15sp"
	    android:text="照片参数设置"
	    android:textColor="@android:color/black"
	    android:gravity="center_horizontal"
	    />
    <TextView
        android:id="@+id/picSizeTv"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/picsize"
        android:textColor="@android:color/black" />
    
    <Spinner
        android:id="@+id/picSizeSp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/picSizeTv" >
        <requestFocus />
    </Spinner>
    
    <TextView
        android:id="@+id/picQualityTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"            
        android:layout_below="@+id/picSizeSp"
        android:layout_centerHorizontal="true"
        android:text="@string/picquality"
        android:textColor="@android:color/black" />
    
    <SeekBar
        android:id="@+id/picQualitySb"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"            
        android:layout_below="@+id/picQualityTv"
        android:layout_centerHorizontal="true"
        android:max="100"
        android:text="" />
    
    <TextView
        android:id="@+id/rsvdTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"            
        android:layout_below="@+id/picQualitySb"
        android:layout_centerHorizontal="true"
        android:text="" 
        android:textColor="@android:color/black"/>
    
    

    
    <Button
        android:id="@+id/confirmBt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rsvdTv"
        android:text="@string/confirm3" />
    <Button
        android:id="@+id/cancelBt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/confirmBt"
          android:layout_alignParentRight="true"
        android:layout_below="@+id/rsvdTv"
        android:text="@string/cancel" />

    <TextView
        android:id="@+id/picQualityValTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/picQualityTv"
        android:layout_alignBottom="@+id/picQualityTv"
        android:layout_centerHorizontal="true"
        android:text="" 
        android:textColor="@android:color/black"/>
    
</RelativeLayout>